<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/fondo_inicio"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Vuelo"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cardAddFlight"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddFlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRegresarAddVuelo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:icon="@android:drawable/ic_menu_revert"
                            android:text="Regresar"
                            android:backgroundTint="@color/regresar"
                            android:textColor="@android:color/white"
                            app:cornerRadius="10dp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aeropuerto salida"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <Spinner
                            android:id="@+id/spinnerAeropuertoSalida"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@drawable/fondo_spinner"
                            android:spinnerMode="dropdown"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aeropuerto destino"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <Spinner
                            android:id="@+id/spinnerAeropuertoLlegada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@drawable/fondo_spinner"
                            android:spinnerMode="dropdown"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de inicio"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                                <EditText
                                    android:id="@+id/etFechaSalida"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Selecciona la fecha de salida"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:layout_marginEnd="8dp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnFechaSalida"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:icon="@android:drawable/ic_menu_today"
                                    app:iconTint="@color/black"
                                    android:contentDescription="Seleccionar fecha de salida"
                                    android:backgroundTint="@color/verde"
                                    app:cornerRadius="15dp"
                                    android:insetLeft="0dp"
                                    android:insetRight="0dp"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:minWidth="0dp"
                                    android:text=""/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de llegada"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                                <EditText
                                    android:id="@+id/etFechaLlegada"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Selecciona la fecha de llegada"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:layout_marginEnd="8dp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnFechaLlegada"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:icon="@android:drawable/ic_menu_today"
                                    app:iconTint="@color/black"
                                    android:contentDescription="Seleccionar fecha de llegada"
                                    android:backgroundTint="@color/verde"
                                    app:cornerRadius="15dp"
                                    android:insetLeft="0dp"
                                    android:insetRight="0dp"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:minWidth="0dp"
                                    android:text=""/>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAnadirVuelo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Añadir vuelo"
                            app:icon="@android:drawable/ic_input_add"
                            android:backgroundTint="@color/morado_transparente"
                            app:cornerRadius="15dp"/>

                </LinearLayout>

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
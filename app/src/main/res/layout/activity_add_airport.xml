<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fondo_inicio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añade el aeropuerto"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardAddAeropuerto"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddAeropuerto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegresarAddAeropuerto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@android:drawable/ic_menu_revert"
                android:text="Regresar"
                android:backgroundTint="@color/regresar"
                android:textColor="@android:color/white"
                app:cornerRadius="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editCodigo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Código"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editAeropuerto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nombre Aeropuerto"
                android:layout_marginBottom="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnadirAeropuerto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir Aeropuerto"
                app:icon="@android:drawable/ic_input_add"
                android:backgroundTint="@color/morado_transparente"
                app:cornerRadius="15dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
